
<div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
      <%= link_to 'MY PROFILE', edit_teacher_path(@current_user), class: "nav-bar-left" %>
      <%= link_to 'EDIT STUDENTS', students_path, class: "nav-bar-left" %>
      <%= link_to 'EDIT TOPICS', topics_path(@current_user), class: "nav-bar-left" %>

        <ul class="pure-menu-list">
            <h1 class="teacher-nav-head"> Instructor: <%= @teacher.name %></h1>
            <%= link_to 'LOGOUT', logout_path, method: :delete, class: "nav-bar-right" %>
        </ul>
    </div>
</div>

<div class="splash-container">
    <div class="teacher-splash">

        <h1 class="teacher-splash-head">UPDATE YOUR PROFILE</h1>

        <div class="teacher-row">

            <%= form_for(@teacher) do |f| %>
              <%= f.label :name, class: 'teacher-edit-labels' %>
              <%= f.text_field :name, class: 'form-control' %>

              <%= f.label :email, class: 'teacher-edit-labels' %>
              <%= f.email_field :email, class: 'form-control' %>

              <%= f.label :password, class: 'teacher-edit-labels' %>
              <%= f.password_field :password, class: 'form-control' %>

              <%= f.submit "SAVE CHANGES", class: "pure-button edit-teacher-button" %>
              <%= link_to 'TEACHER DASHBOARD', teacher_dashboard_path, class: "pure-button edit-teacher-button" %>
            <% end %>


          <div>

          </div>
        </div>

    </div>
</div>
