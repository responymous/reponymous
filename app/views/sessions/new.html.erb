
<div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
      <!-- <%= link_to '', login_path, class: "pure-menu-heading" %> -->
        <ul class="pure-menu-list">
            <!-- <li class="pure-menu-item pure-menu-selected"><%= link_to 'Home', login_path, class: "pure-menu-link" %></li> -->
            <%= link_to ' Teacher Sign Up', new_teacher_path, class: "login-nav-right" %>
        </ul>
    </div>
</div>

<div class="login-splash-container">
    <div class="login-splash">
        <h1 class="login-splash-head">BLANK STARES</h1>
        <p class="splash-subhead">
            Asking for help just got easier.
        </p>
        <p class="splash-subhead">

          <%= form_tag(login_path) do  %>
            <p><%= label_tag :email %></p>
            <p><%= email_field_tag :email %></p>

            <p><%= label_tag :password %></p>
            <p><%= password_field_tag :password %></p>

            <p>
              <%= submit_tag "GET STARTED", class: "pure-button login-button-primary" %>
            </p>

          <% end %>
        </p>

    </div>
</div>
