<body>

<div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
      <%= link_to 'Responymous', login_path, class: "pure-menu-heading" %>
        <!-- <a class="pure-menu-heading" href="">Responymous</a> -->


        <ul class="pure-menu-list">
            <li class="pure-menu-item pure-menu-selected"><%= link_to 'Home', login_path, class: "pure-menu-link" %></li>
            <!-- <li class="pure-menu-item"><a href="#" class="pure-menu-link">Sign Up</a></li> -->
        </ul>
    </div>
</div>

<div class="splash-container">
    <div class="splash">
        <h1 class="splash-head">RESPONYMOUS</h1>
        <p class="splash-subhead">
            Asking for help just got easier!
        </p>
        <p class="splash-subhead">

          <%= form_tag(login_path) do  %>
            <p><%= email_field_tag :email %></p>
            <p><%= label_tag :email %></p>

            <p><%= password_field_tag :password %></p>
            <p><%= label_tag :password %></p>

            <p>
              <%= submit_tag "Get Started", class: "pure-button pure-button-primary" %>
            </p>

          <% end %>
        </p>
        
    </div>
</div>

<div class="content-wrapper">
    <div class="content">
        <h2 class="content-head is-center">Ever feel like you are drowning?</h2>

        <div class="pure-g">
            <div class="l-box pure-u-1 pure-u-md-1-2 pure-u-lg-1-4">

                <h3 class="content-subhead">
