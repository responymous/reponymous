
<div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
      <%= link_to 'DASHBOARD', teacher_dashboard_path, class: "topic-nav-left" %>
      <%= link_to 'STUDENTS', students_path, class: "nav-bar-left" %>
      <%= link_to 'TOPICS', topics_path(@current_user), class: "nav-bar-left" %>

        <ul class="pure-menu-list">
            <%= link_to 'LOGOUT', logout_path, method: :delete, class: "nav-bar-right" %>
            <%= link_to "INSTRUCTOR: #{@current_user.name}", edit_teacher_path(@current_user), class: "profile-right" %>
        </ul>
    </div>
</div>

<div class="splash-container">
    <div class="student-splash">

        <h1 class="teacher-splash-head">STUDENTS</h1>
        
        <div>
          <table class="student-table">
            <thead>
              <tr>
                <th class="student-name-header pure-u-1-4">Name</th>
                <th class="student-email-header pure-u-1-4">Email</th>
              </tr>
            </thead>

            <tbody>
              <% @students.each do |student| %>
                <tr>
                  <td class="student-list pure-u-1-4"><%= student.name %></td>
                  <td class="student-list pure-u-1-3"><%= student.email %></td>
                  <td class="student-list pure-u-1-4"><%= link_to edit_student_path(student) do %><i class="fa fa-pencil-square-o"></i><% end %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= link_to 'NEW STUDENT', new_student_path, class: "pure-button new-student-button" %>

    </div>
</div>
