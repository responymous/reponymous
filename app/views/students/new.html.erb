
<div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
      <%= link_to 'DASHBOARD', teacher_dashboard_path, class: "topic-nav-left" %>
      <%= link_to 'STUDENTS', students_path, class: "nav-bar-left" %>
      <%= link_to 'TOPICS', topics_path(@current_user), class: "nav-bar-left" %>

        <ul class="pure-menu-list">
            <%= link_to 'LOGOUT', logout_path, method: :delete, class: "nav-bar-right" %>

        </ul>
    </div>
</div>

<div class="splash-container">
    <div class="topic-splash">

        <h1 class="topic-splash-head">NEW STUDENT</h1>

          <div class="topic-row">
            <%= form_for(@student) do |f| %>
              <%= f.label :name, class: 'topic-edit-labels' %>
              <%= f.text_field :name, class: 'form-control' %>

              <%= f.label :email, class: 'topic-edit-labels' %>
              <%= f.text_field :email, class: 'form-control' %>

              <%= f.label :password, class: 'topic-edit-labels' %>
              <%= f.password_field :password, class: 'form-control' %>

              <%= f.hidden_field :teacher_id, value: @current_user.id %>
          </div>

          <div class="topic-submit">
              <%= f.submit "SAVE CHANGES", class: "pure-button edit-topic-button" %>

              <% end %>
          </div>
    </div>
</div>


<%= link_to 'Back', teacher_dashboard_path %>
